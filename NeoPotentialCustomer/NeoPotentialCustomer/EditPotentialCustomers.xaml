<Window x:Class="EditPotentialCustomers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="EditPotentialCustomers" Height="440" Width="586" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Upload Data" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" />
        <Button x:Name="btnCreatePotentialCustomer" Content="Create" HorizontalAlignment="Left" Margin="243,73,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox x:Name="cbxPotentialCustomers" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Width="228" DisplayMemberPath="Name"/>
        <GroupBox x:Name="gbxPotentialCustomer" Header="PotentialCustomer" Margin="14,100,10,10">
            <Grid Margin="2,0,-2,0">
                <Button Content="Save" Margin="0,256,0,0" />
                <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <TextBox Name="txtName" HorizontalAlignment="Left" Height="23" Margin="53,13,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
